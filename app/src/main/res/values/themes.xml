<?xml version="1.0" encoding="utf-8"?>
<resources>
    
    <!-- Base application theme - Dark theme for reduced eye strain -->
    <style name="Theme.Chinna" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand colors -->
        <item name="colorPrimary">@color/dark_primary</item>
        <item name="colorPrimaryVariant">@color/dark_primary_variant</item>
        <item name="colorOnPrimary">@color/white</item>
        
        <!-- Secondary brand colors -->
        <item name="colorSecondary">@color/dark_accent</item>
        <item name="colorSecondaryVariant">@color/dark_accent</item>
        <item name="colorOnSecondary">@color/black</item>
        
        <!-- Background colors -->
        <item name="android:windowBackground">@color/dark_background</item>
        <item name="colorSurface">@color/dark_surface</item>
        
        <!-- Text colors -->
        <item name="android:textColorPrimary">@color/dark_text_primary</item>
        <item name="android:textColorSecondary">@color/dark_text_secondary</item>
        
        <!-- Status bar -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">false</item>
        
        <!-- Navigation bar -->
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:windowLightNavigationBar">false</item>
        
        <!-- Edge-to-edge support for Android 15 -->
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:enforceNavigationBarContrast">false</item>
        <item name="android:enforceStatusBarContrast">false</item>
        
        <!-- Disable shadows for clarity -->
        <item name="elevationOverlayEnabled">false</item>
        
        <!-- Default text size - larger for readability -->
        <item name="android:textSize">22sp</item>
        
        <!-- Font style for better readability -->
        <item name="android:fontFamily">sans-serif</item>
        <item name="fontFamily">sans-serif</item>
    </style>
    
    <!-- Auth Activity Theme - Explicitly Dark -->
    <style name="Theme.Chinna.Auth" parent="Theme.Chinna">
        <item name="android:windowBackground">@color/dark_background</item>
        <item name="colorSurface">@color/dark_surface</item>
        <item name="android:colorBackground">@color/dark_background</item>
        <item name="colorOnSurface">@color/dark_text_primary</item>
        
        <!-- Force dark theme for components -->
        <item name="textInputStyle">@style/DarkTextInputStyle</item>
        
        <!-- Hide action bar for auth screens -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    
    <!-- Dark TextInputLayout Style -->
    <style name="DarkTextInputStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/dark_accent</item>
        <item name="hintTextColor">@color/dark_accent</item>
        <item name="android:textColorHint">@color/dark_text_secondary</item>
        <item name="boxBackgroundColor">@color/dark_background</item>
    </style>
    
    <!-- Popup Menu Theme -->
    <style name="Theme.Chinna.PopupMenu" parent="ThemeOverlay.MaterialComponents.Dark">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:itemBackground">@color/dark_surface</item>
        <item name="android:colorBackground">@color/dark_surface</item>
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:textColorSecondary">@android:color/white</item>
        <item name="android:popupBackground">@color/dark_surface</item>
        <item name="colorControlNormal">@android:color/white</item>
    </style>
    
    <!-- Dialog Theme for consistent dark appearance -->
    <style name="Theme.Chinna.Dialog" parent="ThemeOverlay.MaterialComponents.Dialog.Alert">
        <!-- Background color -->
        <item name="android:windowBackground">@color/dark_surface</item>
        <item name="android:colorBackground">@color/dark_surface</item>
        <item name="android:background">@color/dark_surface</item>
        
        <!-- Text colors -->
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:textColorSecondary">@android:color/white</item>
        <item name="android:textColor">@android:color/white</item>
        
        <!-- Button colors -->
        <item name="colorAccent">@color/dark_accent</item>
        <item name="buttonBarPositiveButtonStyle">@style/DialogButtonStyle</item>
        <item name="buttonBarNegativeButtonStyle">@style/DialogButtonStyle</item>
        <item name="buttonBarNeutralButtonStyle">@style/DialogButtonStyle</item>
    </style>
    
    <!-- Session Dialog Theme - Black text on white background for better readability -->
    <style name="Theme.Chinna.SessionDialog" parent="ThemeOverlay.MaterialComponents.Dialog.Alert">
        <!-- Background color - WHITE -->
        <item name="android:windowBackground">@android:color/white</item>
        <item name="android:colorBackground">@android:color/white</item>
        <item name="android:background">@android:color/white</item>
        
        <!-- Text colors - BLACK -->
        <item name="android:textColorPrimary">@android:color/black</item>
        <item name="android:textColorSecondary">@android:color/black</item>
        <item name="android:textColor">@android:color/black</item>
        
        <!-- Button colors -->
        <item name="colorAccent">@color/dark_primary</item>
        <item name="buttonBarPositiveButtonStyle">@style/SessionDialogButtonStyle</item>
        <item name="buttonBarNegativeButtonStyle">@style/SessionDialogButtonStyle</item>
    </style>
    
    <!-- Dialog Button Style -->
    <style name="DialogButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/dark_accent</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">true</item>
    </style>
    
    <!-- Session Dialog Button Style - High contrast for better visibility -->
    <style name="SessionDialogButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">true</item>
        <!-- Text color set in code for different buttons -->
    </style>
    
    <!-- NoActionBar theme for RecaptchaActivity -->
    <style name="Theme.Chinna.NoActionBar" parent="Theme.Chinna">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowBackground">@color/dark_background</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>
    
</resources>