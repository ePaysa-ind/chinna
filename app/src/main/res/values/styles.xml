<?xml version="1.0" encoding="utf-8"?>
<resources>
    
    <!-- Bottom Navigation Text -->
    <style name="BottomNavText" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>
    
    <!-- Button Style -->
    <style name="SunlightButton" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">64dp</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/dark_background</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:backgroundTint">@color/dark_accent</item>
        <item name="strokeColor">@color/dark_accent</item>
        <item name="strokeWidth">3dp</item>
        <item name="cornerRadius">8dp</item>
        <item name="android:elevation">0dp</item>
    </style>
    
    <!-- Title Text -->
    <style name="TitleText">
        <item name="android:textSize">28sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/dark_text_primary</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>
    
    <!-- Body Text -->
    <style name="BodyText">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/dark_text_primary</item>
        <item name="android:fontFamily">sans-serif</item>
    </style>
    
    <!-- Outlined Button Style -->
    <style name="SunlightButton.Outlined" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">64dp</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/dark_text_primary</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="strokeColor">@color/dark_accent</item>
        <item name="strokeWidth">3dp</item>
        <item name="cornerRadius">8dp</item>
        <item name="android:elevation">0dp</item>
    </style>
    
    <!-- Dark Alert Dialog Style - Redirect to our consistent theme -->
    <style name="DarkAlertDialog" parent="Theme.Chinna.Dialog">
        <!-- This style is now just a pointer to Theme.Chinna.Dialog for consistency -->
    </style>

    <!-- Keep these for backward compatibility -->
    <style name="DarkDialogTitle" parent="MaterialAlertDialog.MaterialComponents.Title.Text">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    
    <style name="DarkDialogBody" parent="MaterialAlertDialog.MaterialComponents.Body.Text">
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">16sp</item>
    </style>
    
    <style name="DarkDialogButton" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/dark_accent</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">true</item>
    </style>
    
    <!-- Prefix text style for +91 -->
    <style name="PrefixTextAppearance" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/dark_text_primary</item>
        <item name="android:textStyle">normal</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="lineHeight">24sp</item>
    </style>
    
</resources>