<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="@color/dark_background">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/verify_otp"
        android:textSize="32sp"
        android:textStyle="bold"
        android:textColor="@color/dark_text_primary"
        android:gravity="center"
        android:layout_marginTop="48dp"
        android:layout_marginBottom="16dp" />

    <TextView
        android:id="@+id/tv_otp_sent_to"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/otp_sent_to"
        android:textSize="20sp"
        android:textColor="@color/dark_text_secondary"
        android:gravity="center"
        android:layout_marginBottom="8dp" />
        
    <!-- Attempts remaining indicator -->
    <TextView
        android:id="@+id/tv_attempts_remaining"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Attempts remaining: 3"
        android:textSize="16sp"
        android:textColor="@color/dark_accent"
        android:gravity="center"
        android:layout_marginBottom="32dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/enter_6_digit_otp"
        android:textSize="20sp"
        android:textColor="@color/dark_text_primary"
        android:layout_marginBottom="16dp" />

    <EditText
        android:id="@+id/et_otp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:maxLength="6"
        android:textSize="24sp"
        android:textColor="@color/dark_text_primary"
        android:padding="16dp"
        android:background="@drawable/border_background"
        android:hint="000000"
        android:textColorHint="@color/dark_text_secondary"
        android:gravity="center"
        android:letterSpacing="0.3"
        android:layout_marginBottom="32dp" />

    <Button
        android:id="@+id/btn_verify"
        style="@style/Widget.MaterialComponents.Button"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:text="@string/verify"
        android:layout_marginBottom="16dp"
        android:backgroundTint="@color/dark_accent" />

    <Button
        android:id="@+id/btn_resend_otp"
        style="@style/Widget.MaterialComponents.Button.TextButton"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:text="@string/resend_otp"
        android:layout_marginBottom="8dp"
        android:textColor="@color/dark_accent" />
        
    <!-- Change phone number button -->
    <Button
        android:id="@+id/btn_change_number"
        style="@style/Widget.MaterialComponents.Button.TextButton"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:text="Change Phone Number"
        android:layout_marginBottom="16dp"
        android:textColor="@color/dark_text_secondary" />

    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="gone"
        android:indeterminateTint="@color/dark_accent" />

</LinearLayout>