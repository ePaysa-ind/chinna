<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    app:cardElevation="2dp"
    app:cardCornerRadius="8dp">
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp">
        
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">
            
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">
                
                <TextView
                    android:id="@+id/tv_task_title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Irrigation"
                    android:textSize="16sp"
                    android:textStyle="bold" />
                
                <ImageView
                    android:id="@+id/iv_critical_icon"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/ic_warning"
                    app:tint="@color/warning"
                    android:layout_marginStart="4dp"
                    android:visibility="gone" />
                
            </LinearLayout>
            
            <TextView
                android:id="@+id/tv_task_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Apply light irrigation"
                android:textSize="14sp"
                android:textColor="@color/sunlight_text_secondary"
                android:layout_marginTop="4dp" />
            
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp">
                
                <TextView
                    android:id="@+id/tv_task_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="25/10/2024"
                    android:textSize="12sp"
                    android:textColor="@color/sunlight_text_secondary" />
                
                <TextView
                    android:id="@+id/tv_task_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="In 3 days"
                    android:textSize="12sp"
                    android:textStyle="bold"
                    android:layout_marginStart="16dp" />
                
            </LinearLayout>
            
        </LinearLayout>
        
        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_chevron_right"
            android:layout_gravity="center_vertical"
            app:tint="@color/sunlight_text_secondary" />
        
    </LinearLayout>
    
</com.google.android.material.card.MaterialCardView>