<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="@drawable/table_row_background"
    android:padding="12dp">

    <TextView
        android:id="@+id/tv_serial"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:text="1"
        android:textSize="14sp"
        android:textColor="@color/dark_text_primary"
        android:gravity="center" />

    <TextView
        android:id="@+id/tv_date"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1.2"
        android:text="05/18 10:30"
        android:textSize="14sp"
        android:textColor="@color/dark_text_primary"
        android:paddingStart="8dp" />

    <TextView
        android:id="@+id/tv_crop"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Tomato"
        android:textSize="14sp"
        android:textColor="@color/dark_text_primary"
        android:paddingStart="8dp" />

    <TextView
        android:id="@+id/tv_issue"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1.5"
        android:text="Leaf Blight"
        android:textSize="14sp"
        android:textColor="@color/dark_text_primary"
        android:paddingStart="8dp" />

    <TextView
        android:id="@+id/tv_confidence"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:text="86%"
        android:textSize="14sp"
        android:textStyle="bold"
        android:textColor="@color/dark_accent"
        android:gravity="center" />

</LinearLayout>